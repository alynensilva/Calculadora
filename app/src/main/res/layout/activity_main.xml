<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@android:color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtExpressao"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="end"
        android:ellipsize="start"
        android:singleLine="true"
        android:textColor="@color/btAcao"
        android:textSize="40sp" />


    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="@color/white"
        android:layout_gravity="end"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="30sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/acaoLimpar"
                style="@style/ActionButtonStyle"
                android:text="C" />

            <TextView
                android:id="@+id/acaoApagar"
                style="@style/ActionButtonStyle"
                android:text="CE" />

            <TextView
                android:id="@+id/opDiv"
                style="@style/ActionButtonStyle"
                android:text="/" />

            <TextView
                android:id="@+id/opPot"
                style="@style/ActionButtonStyle"
                android:text="xÂ²" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/numSete"
                style="@style/NumberButtonStyle"
                android:text="7"/>

            <TextView
                android:id="@+id/numOito"
                style="@style/NumberButtonStyle"
                android:text="8"/>

            <TextView
                android:id="@+id/numNove"
                style="@style/NumberButtonStyle"
                android:text="9"/>

            <TextView
                android:id="@+id/opMult"
                style="@style/ActionButtonStyle"
                android:text="*"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/numQuatro"
                style="@style/NumberButtonStyle"
                android:text="4"/>

            <TextView
                android:id="@+id/numCinco"
                style="@style/NumberButtonStyle"
                android:text="5"/>

            <TextView
                android:id="@+id/numSeis"
                style="@style/NumberButtonStyle"
                android:text="6"/>

            <TextView
                android:id="@+id/opSub"
                style="@style/ActionButtonStyle"
                android:text="-"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/numUm"
                style="@style/NumberButtonStyle"
                android:text="1"/>

            <TextView
                android:id="@+id/numDois"
                style="@style/NumberButtonStyle"
                android:text="2"/>

            <TextView
                android:id="@+id/numTres"
                style="@style/NumberButtonStyle"
                android:text="3"/>

            <TextView
                android:id="@+id/opSoma"
                style="@style/ActionButtonStyle"
                android:text="+"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/numPonto"
                style="@style/NumberButtonStyle"
                android:text="."/>

            <TextView
                android:id="@+id/numZero"
                style="@style/NumberButtonStyle"
                android:text="0"/>

            <TextView
                android:id="@+id/acaoResultado"
                style="@style/EqualButtonStyle"
                android:text="="/>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>